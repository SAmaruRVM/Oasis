@model LoginViewModel
<form class="w-100"
      asp-action="Login"
      asp-controller="Home" 
      asp-antiforgery="true"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-success="ajaxCompleto"
      data-ajax-loading="#loading-icon-login">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <span class="text-danger text-center" asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
            <span class="text-danger text-center" asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input class="form-control" asp-for="LembrarDeMim" />
            <label asp-for="LembrarDeMim"></label>
        </div>
    <button class="btn btn-primary btn-block" type="submit">
        <i id="loading-icon-login" style="display: none;" class="fas fa-sync fa-spin"></i>
        Autenticar-me
    </button>
</form>