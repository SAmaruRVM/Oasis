@model IEnumerable<Tema>
@inject IConfiguration configuration
@{
    ViewBag.Title = $"Administração {configuration["Projeto:Nome"]} - Temas";
}
<div>
    <button class="btn btn-info btn my-3">Adicionar Tema</button>
    <table class="table">
        <thead class="thead-light">
            <tr>
                <th scope="col">Nome do tema</th>
                <th scope="col">Link do tema</th>
                <th scope="col">Acções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Tema tema in Model)
            {
                <tr>
                    <td>@tema.Nome</td>
                    <td>@tema.LinkCdn</td>
                    <td>
                        <a href="#" data-toggle="modal" data-target="#modal-editar-tema"><i class="far fa-edit fa-lg ml-1"></i></a>
                        <a href="#"><i class="far fa-trash-alt fa-lg ml-2"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="modal fade" id="modal-editar-tema" tabindex="-1" role="dialog" aria-labelledby="modal-editar-tema-titulo" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-editar-tema-titulo">Editar tema</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">
                <form id="form-editar-tema"
                      asp-action="EditarTemas"
                      asp-controller="Temas"
                      asp-area="Administrador"
                      data-ajax="true"
                      data-ajax-method="POST"
                      data-ajax-success="insercaoMembroDirecaoConcluidaSucesso"
                      data-ajax-loading="#loading-icon-insercao-membro-direcao">

                    <div class="form-group">
                        <label>Nome</label>
                        <input class="form-control" value="" />

                    </div>

                    <div class="form-group">
                        <label>Link cdn</label>
                        <input class="form-control" />
                    </div>


                    <button class="btn btn-success btn-block" type="submit">
                        <i id="loading-icon-insercao-membro-direcao" style="display: none;" class="fas fa-spinner fa-spin"></i>
                        Actualizar
                    </button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>